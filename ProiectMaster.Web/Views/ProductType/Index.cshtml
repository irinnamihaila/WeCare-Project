@model IEnumerable<ProductTypeVM>;

@{ 
    ViewData["Title"] = "Product Type";
}

<div class="row mb-2 mt-2 operationsButtons">
    <div class="col-md-12">
        <a href="/ProductType/New" class="btn btn-new btn-outline-new font-weight-bold mr-2" data-toggle="tooltip" title="New" data-placement="top">
            <span class="fa fa-plus-circle"></span>
        </a>

        <button class="btn btn-edit btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" title="Edit" data-placement="top" onclick="ProductType.onEditBtnPress() ">
            <span class="fa fa-edit"></span>
        </button>

        <button class="btn btn-delete btn-outline-delete font-weight-bold mr-2" id = "btnDelete" data-toggle="tooltip" title="Delete" data-placement="top" onclick="ProductType.onDelete()">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>

<table id="table" class="table table-hover table-striped table-dark">
        <thead>
            <tr>
                <th hidden>Product Type Id</th>
                <th>Product Type Name</th>
                <th>Description</th>
                <th>Code</th>
            </tr>
        </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr id="@item.Id">
                    <td hidden>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Code</td>
                </tr>   
            }
    </tbody>
</table>